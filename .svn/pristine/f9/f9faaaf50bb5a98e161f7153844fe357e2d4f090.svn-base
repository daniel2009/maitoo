<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	
</head>

<body>
	<div class="block">
		<p class="block-heading" data-toggle="collapse"
			data-target="#chart-container" style="font-size:20px">修改资料</p>
		<div class="box_content">
			<div class="content_title">修改资料</div>
			<div class="content_text">
				<table class="itable">
					
					
				<tr>
						<td class="align_right">妮称：</td>
						<td class="align_left"><input name="nick_yonghuming" type="text"
							maxlength="20" />
						</td>
					</tr>
					<tr>
						<td class="align_right">姓名(拼音)：</td>
						<td class="align_left"><input name="realName" type="text"
							maxlength="20" /><span style="color:red;">*</span><span ">注意：请使用拼音填写姓名</span>
						</td>
					</tr>
					<tr>
						<td class="align_right">联系手机：</td>
						<td class="align_left"><input type="text" name="phone"
							maxlength="20"  />&nbsp;&nbsp;<input id="phoneverify" value="待验证" type="button" style="background-color:rgba(238, 95, 91, 0.52)" onclick="verifyflag(0)"><span id="phoneflag" style="display:none;">已验证</span>
							&nbsp;&nbsp;<span id="remarkcodephone">请输入验证码:&nbsp;</span><input type="text" name="phonecode"	maxlength="6"  />&nbsp;&nbsp;<input id="phoneverifycode" value="验证" type="button" style="background-color:green;" onclick="verifycodeflag(0)">
							
							</td>
					</tr>
					<tr>
						<td class="align_right">Email：</td>
						<td class="align_left"><input type="text" name="email"/>&nbsp;&nbsp;<input id="emailverify" value="待验证" type="button" style="background-color:rgba(238, 95, 91, 0.52)" onclick="verifyflag(1)">
						<span id="emailflag" style="display:none;">已验证</span>
						&nbsp;&nbsp;<span id="remarkcodeemail">请输入验证码:&nbsp;</span><input type="text" name="emailcode"	maxlength="6"  />&nbsp;&nbsp;<input id="emailverifycode" value="验证" type="button" style="background-color:green;" onclick="verifycodeflag(1)">
							
						</td>
					</tr>
					<tr>
						<td class="align_right">QQ：</td>
						<td class="align_left"><input type="text" name="qq"
							maxlength="16" />
						</td>
					</tr>
					<tr>
						<td class="align_right">地址：</td>
						<td class="align_left"><input type="text" name="address"
							maxlength="36" />
						</td>
					</tr>
					<tr>
						<td class="align_right">国家：</td>
						<td class="align_left"><input name="country" type="text"
							maxlength="10" />
						</td>
					</tr>
					<!--<tr>
									<td class="align_right">州：</td>
									<td class="align_left"><input type="text" value="不支持" /></td>
								</tr>
								<tr>
									<td class="align_right">邮编：</td>
									<td class="align_left"><input type="text" value="不支持" /></td>
								</tr>-->
					<tr>
						<td class="align_right"></td>
						<td class="align_left"><a class="button" href="javascript:saveInfo()" style="background: #007FFF;color: #FFFFFF;padding: 5px 15px;display:inline">保存</a>
						</td>
					</tr>
				</table>
			</div>

		</div>
	</div>

</body>
</html>
