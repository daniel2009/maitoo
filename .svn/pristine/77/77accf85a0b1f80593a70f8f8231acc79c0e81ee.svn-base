/* CSS Document */
._container{ width:1120px; margin:0 auto;}

.menu{height:38px; background:#434343;}
.menu p{ line-height:38px; color:#fff; font-size:18px;}
.menu p:nth-of-type(1){ float:left;}
.menu p:nth-of-type(2){ float:right;}
.menu a{ color:#fff; margin-left:22px;}
.menu a:hover{ color:#F80A00; text-decoration:underline;}
/* menu */

.header{ background:#fff;}
.header ._container{ height:140px; position:relative;}
.header h1{ width:191px; height:140px; background:url(../img/icon_logo.png) no-repeat center center; float:left; }
.header h1 a{ width:100%; height:140px; display:block; text-indent:-9999px;}
.search{ border:5px solid #F80A00; position:absolute; top:35px; right:0;}
.search input[type=text]{ width:520px; height:60px; border:none; vertical-align:middle; text-indent:15px; font-size:13px; font-size:24px;}
.search input[type=submit]{ width:170px; height:60px; line-height:60px; border:none; vertical-align:middle; background:#F80A00; font-size:38px; color:#fff; cursor:pointer;}
/* header */

.nav{ height:50px; background:#F80A00;}
.ul_nav{ float:left;}
.ul_nav li{ float:left; position:relative;}
.ul_nav a{ height:50px; line-height:50px; padding:0 55px; color:#fff; text-align:center; font-size:28px; display:inline-block; -wekbit-transform:color 0.3s; -moz-transform:color 0.3s; transform:color 0.3s;}
.ul_nav a:hover{ color:yellow;}
.ul_nav li.active a{ background:#950600;}
.ul_nav li.active a:hover{ color:#fff;}
.cart{ height:50px; overflow:hidden; float:left; background:#000;;}
.cart a{ width:206px;  display:block; line-height:50px; font-size:18px; color:#fff; background:url(../img/icon_right_0.png) no-repeat 93% center;}
.cart em{ color:#F80A00; font-size:2.2rem; font-style:normal; padding:0 3px;}
.cart span{ width:50px; height:50px; display:inline-block; margin-left:6px; background:url(../img/icon_cart.png) no-repeat center 10px; vertical-align:middle;}
/* nav  */

.footer{ height:320px; background:#434343;}
.link{ height:133px; border-bottom:1px solid #ccc; background:url(../img/icon_logo.png) no-repeat center center;}
.link p{ line-height:133px; color:#fff; font-size:20px;}
.link p:nth-of-type(1){ float:left; margin-left:60px;}
.link p:nth-of-type(2){ float:right; margin-right:40px;}
.link a{ color:#fff; font-size:20px;}
.link a:hover{ color:#F80A00; text-decoration:underline;}

.flink{ line-height:40px; color:#fff; font-size:20px; text-align:center; padding:25px 0;}
.flink a{ color:#fff; font-size:20px;}
.flink a:hover{ color:#F80A00; text-decoration:underline;}

.copyright{ font-size:17px; color:#fff; text-align:center;}

/* paging */
.paging{ text-align:center; padding:20px 0;}
.paging a{ height:28px; padding:0 8px; line-height:28px; text-align:center; border-radius:3px; display:inline-block; margin-right:3px; font-size:20px; color:#000; cursor:pointer; }
.paging a:hover{ color:red;}
.paging a.active{background:red; color:#fff;}
.paging a.active:hover{ color:#fff;}

@keyframes scale{
	0%{  -webkit-transform:scale(1.0);   -moz-transform:scale(1.0);  transform:scale(1.0); }
	20%{  -webkit-transform:scale(1.2);   -moz-transform:scale(1.2);  transform:scale(1.2);  }
	50%{ -webkit-transform:scale(0.9);   -moz-transform:scale(0.9);  transform:scale(0.9); }
	70%{ -webkit-transform:scale(1.1);   -moz-transform:scale(1.1);  transform:scale(1.1);  }
	90%{ -webkit-transform:scale(0.95);   -moz-transform:scale(0.95);  transform:scale(0.95); }
	100%{  -webkit-transform:scale(1.0);   -moz-transform:scale(1.0);  transform:scale(1.0); }
}