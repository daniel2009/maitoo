function loadGlobalArgs() {
	// 获取仓库列表
	$
			.ajax({
				type : "get",
				url : admin_globalargs_list_url,
				success : function(response) {
					var code = response.code;
					var num = 0;
					if (code == "200") {

						if (response.data == null || response.data.length == 0) {
							// 没有数据
						} else {
							var str = "";
							$
									.each(
											response.data,
											function() {
												var type = "";
												if (this.argtype == 0)// 图片类型
												{
													type = "图片";
												} else if (this.argtype == 1)// 文本类型
												{
													type = "文本";
												} else {
													type = "未知";
												}

												num = num + 1;// 序号

												str = str + "<tr id='"
														+ this.id + "'>";
												str = str
														+ "<td style='display:none;'>"
														+ this.id + "</td>";
												str = str + "<td>" + num
														+ "</td>";
												str = str + "<td>" + type
														+ "</td>";
												str = str + "<td>"
														+ this.createtime
														+ "</td>";
												str = str + "<td>"
														+ this.modifytime
														+ "</td>";
												str = str + "<td>"
														+ this.argflag
														+ "</td>";
												if (type == "图片") {
													var url = this.argcontent;
													url = baseUrl + url;
													str += "<td style='text-align:center;'><a href='"
															+ url
															+ "'  target='_blank'><img width='30px' height='30px' src='"
															+ url
															+ "'/></a></td>";
												} else {
													str = str + "<td>"
															+ this.argcontent
															+ "</td>";
												}
												str = str + "<td>"
														+ this.argremark
														+ "</td>";

												str += "<td id='"
														+ this.id
														+ "'><a href='"
														+ this.id
														+ "' name='a_global_modify_link'>修改</a>|<a id='"
														+ this.id
														+ "' href='#' name='a_global_del_link'>删除</a></td>";

												str = str + "</tr>";
												// alert(this.id);
											});
							$("#tableshow tbody").html(str);

							// 修改全局变量参数
							$("a[name='a_global_modify_link']")
									.click(
											function() {
												var id = $(this).attr("href");
												var url = admin_globalargs_page_modify_url
														+ "?id=" + id;
												$("#main-content").load(url);
												return false;
											});

							// 删除一条记录
							$("a[name='a_global_del_link']")
									.click(
											function() {
												if (confirm("您是否确定删除此行全局变量?")) {
													var id = $(this).attr(
															"id");
													//alert(id);
													$
															.ajax({
																type : "post",
																url : admin_globalargs_delone_url,
																data : {
																	id : id
																},

																success : function(
																		response) {
																	var code = response.code;
																	//alert(code);
																	if (code == "200") {
																		alert("删除成功!");
																		nav94Click();
																	} else {
																		alert("删除失败，失败原因是："
																				+ response.message);
																		nav94Click();
																	}

																}
															});
												}
											});
						}
					} else if ("607" == code) {
						alert("您尚未登录或登录已失效！");
						logout();
					} else {
						// 失败
						// alert("获取仓库数据失败，原因是:" + response.message);
					}
				}
			});
}


