/* jQuery Countdown styles 2.0.0. */
.is-countdown {
}
.countdown-rtl {
	direction: rtl;
}
.countdown-holding span {
	color: #888;
}
.countdown-row {
	clear: both;
	width: 100%;
	padding: 0px 2px;
	text-align: center;
}
.countdown-show1 .countdown-section {
	width: 98%;
}
.countdown-show2 .countdown-section {
	width: 48%;
}
.countdown-show3 .countdown-section {
	width: 32.5%;
}
.countdown-show4 .countdown-section {
	width: 16.5%;
}
.countdown-show5 .countdown-section {
	width: 19.5%;
}
.countdown-show6 .countdown-section {
	width: 16.25%;
}
.countdown-show7 .countdown-section {
	width: 14%;
}
.countdown-show4 .countdown-section:last-child{
	background: none;
}
.countdown-section {
	display: inline-block;
	color: #67d6ff;
	font-size: 100px;
	font-weight: 300;
	text-align: center;
	background: url('dot.png') no-repeat 100% 10%;
}
.countdown-period {
    display: block;
		color: #fff;
	text-transform: uppercase;
	font-size: 14px;
	font-weight: bold;
	margin-top: 51px;
}
.countdown-descr {
	display: block;
	width: 100%;
}
