<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"><mapper namespace="com.weiye.dao.CartDao">	<resultMap id="basic_result_map" type="com.weiye.model.Cart">		<id column="id" property="id" javaType="String" />		<result column="user_id" property="userId" javaType="String"/>		<result column="product_id" property="productId" javaType="String"/>		<result column="quantity" property="quantity" javaType="String"/>		<association property="product" column="product_id" select="com.weiye.dao.ProductDao.findById"></association>	</resultMap>		<insert id="insert" useGeneratedKeys="true" keyProperty="id">		INSERT INTO cart(user_id, product_id, quantity) VALUES(#{userId}, #{productId}, #{quantity})	</insert>	<select id="findById" resultMap="basic_result_map">		SELECT * FROM cart WHERE id=#{id}	</select>	<select id="countByUser" resultType="java.lang.Integer">		SELECT COUNT(id) FROM cart c WHERE c.user_id=#{user.id}	</select>	<select id="findByUser" resultMap="basic_result_map">		SELECT * FROM cart c WHERE c.user_id=#{user.id}		ORDER BY c.id DESC		LIMIT #{firstResult}, #{pageSize}	</select>	<select id="setByProductIdsIncludeSame" resultMap="basic_result_map">		<trim prefix="" prefixOverrides="UNION ALL">			<foreach collection="ids" item="id">				UNION ALL SELECT #{id} AS product_id FROM DUAL			</foreach>		</trim>		LIMIT #{firstResult}, #{pageSize}	</select>	<delete id="delete">		DELETE FROM cart WHERE id=#{id}	</delete>	<delete id="deleteByUser">		DELETE FROM cart WHERE user_id=#{id}	</delete></mapper>