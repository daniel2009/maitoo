<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
	<head>
	<link rel="shortcut icon" href="../img/favicon.ico" /> 
	</head>

	<body>
		<div class="content-box" style="width: 1050px;">
			<!-- Start Content Box -->
			<div class="content-box-header" style="width: 1050px;">
				<h3>信用卡充值</h3>
				<span>
					<a style="padding-top: 20px;float: left;margin-left: 20px;" href="#" id="a_back_account_list_link">返回列表</a>
				</span>
				<div class="clear"></div>
			</div>
			<!-- End .content-box-header -->
			<div class="content-box-content">
				<div class="tab-content" id="tab2">
		          <form action="#" method="post" >
		            <fieldset>
		            <input type="hidden" name="id" value="${param.id }"/>
		            <input type="hidden" name="userId" />
			            <p>
			              <label class="cllabel">用户名：</label>
			              <input type="text" class="text-input" disabled="disabled" name="u_name" value="gerry"maxlength="16"/>
			            </p>
			            <p>
			              <label class="cllabel">账户余额：</label>
			              <input class="text-input" disabled="disabled"  type="text" name="balance" maxlength="16"/>
			            </p>
			            <p>
			              <label class="cllabel">持卡人姓名：</label>
			              <input class="text-input" disabled="disabled" type="text" name="c_name" maxlength="16"/>
			            </p>
			            <p>
			              <label class="cllabel">信用卡卡号：</label>
			              <input class="text-input" disabled="disabled" type="text" name="c_no" maxlength="26"/>
			            </p>
			            <p>
			              <label class="cllabel">信用卡安全码：</label>
			              <input class="text-input" disabled="disabled" type="text" name="c_code"maxlength="16" />
			            </p>
			            <p>
			              <label class="cllabel">信用卡类别：</label>
			              <input class="text-input" disabled="disabled" type="text" name="c_type" maxlength="16"/>
			            </p>
			            <p>
			              <label class="cllabel">预充金额：</label>
			              <input class="text-input" disabled="disabled" type="text" name="amount" maxlength="16"/>
			            </p>
			            <p>
			              <label class="cllabel">实充金额：</label>
			              <input class="text-input" type="text" name="realAmount" maxlength="10"/><small>只允许填写数字</small>
			            </p>
			            <p>
			              <label class="cllabel">状态：</label>
			              <select name="type">
			              	<option value="1" selected="selected">充值成功</option>
			              	<option value="2">充值失败</option>
			              </select>
			            </p>
			            <p>
			              <label class="cllabel">备注：</label>
			              <textarea rows="3" cols="10" class="text-input textarea wysiwyg" name="remark"></textarea>
			            </p>
			            <p style="margin-left: 50px;">
			              <input id="bt_modify_account_detail" class="button" type="submit" value="提交" />
			            </p>
		            </fieldset>
		            <div class="clear"></div>
		            <!-- End .clear -->
		          </form>
		        </div>
			</div>
		</div>
		
		
	</body>
<script type="text/javascript">
	$("#main-content").ready(function() {
		loadNav611Data();
	});
</script>
</html>